{
  "name"         : "bikeshop",
  "version"      : "0.1.1",
  "description"  : "Cooperative bicycle workshop",
  "author"       : "Michael Miretski",
  "license"      : "ISC",
  "type"         : "module",
  "eslintIgnore" : [
    "**/*.ts",
    "**/*.svg",
    "node_modules"
  ],
  "repository": {
    "type": "git",
    "url" : "git@github.com:4apaev/bikeshop.git"
  },
  "scripts": {
    "up"     : "docker-compose up -d",
    "down"   : "docker-compose down",
    "migrate": "node db/migrate.js",
    "start"  : "npm run migrate && node index.js",
    "test"   : "c8 --check-coverage mocha ./tests/*.spec.js",
    "lint"   : "eslint --fix src",
    "mocha"  : "mocha"
  },
  "dependencies": {
    "koa"   : "2.13.4",
    "pg"    : "8.7.3",
    "stylus": "0.56.0",
    "sync"  : "github:4apaev/sync"
  },
  "devDependencies": {
    "@babel/core"         : "7.17.5",
    "@babel/eslint-parser": "7.17.0",
    "@babel/eslint-plugin": "7.16.5",
    "@types/koa"          : "2.13.4",
    "@types/node"         : "17.0.21",
    "@types/pg"           : "8.6.4",
    "c8"                  : "7.11.0",
    "eslint"              : "8.10.0",
    "mocha"               : "9.2.1"
  }
}
