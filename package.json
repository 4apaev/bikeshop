{
  "name"        : "bikeshop",
  "version"     : "0.1.1",
  "license"     : "ISC",
  "description" : "Cooperative bicycle workshop",
  "author"      : "Michael Miretski",
  "type"        : "module",
  "main"        : "index.js",
  "eslintIgnore": [
    "**/*.ts",
    "**/*.svg",
    "node_modules"
  ],
  "repository": {
    "type": "git",
    "url" : "git@github.com:4apaev/bikeshop.git"
  },
  "scripts": {
    "up      ": "docker-compose up -d",
    "down    ": "docker-compose down",
    "test    ": "c8 --check-coverage mocha ./tests/*.spec.js",
    "types   ": "tsc index.js",
    "migrate ": "node db/migrate.js",
    "start:bg": "node index.js 2>&1 > out.log &",
    "start   ": "node index.js"
  },
  "dependencies": {
    "koa"    : "2.13.4",
    "pg"     : "8.7.3",
    "stylus" : "0.57.0",
    "sync"   : "github:4apaev/sync"
  },
  "devDependencies": {
    "@babel/core": "7.17.10",
    "@babel/eslint-parser": "7.17.0",
    "@babel/eslint-plugin": "7.17.7",
    "@types/stylus": "0.48.37",
    "@types/node": "17.0.31",
    "@types/koa": "2.13.4",
    "@types/pg": "8.6.5",
    "eslint": "8.15.0",
    "mocha": "10.0.0",
    "c8": "7.11.2"
  }
}
