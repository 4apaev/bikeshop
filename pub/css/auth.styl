@require 'theme'



ws-auth
  display block

.{uid}
  margin: margin
  display block

  blockquote
    margin: 1em
    padding: 1em
    font-style: italic
    border-left: 4px solid $.ok.a
    &:empty
      display: none
    &.err
      border-left-color: $.err.a

  legend
    margin-bottom: 2em
    line-height: 3
    padding: 0 1em
    font-size: 1.25em
    text-transform: capitalize
    border-bottom: 1px solid $.br.a

  fieldset
    display: flex
    padding: 0 1em
    align-items: center
    margin-bottom: 1em
    justify-content: space-between
    label
      flex: 1 auto
      margin-right: 1em
    input
      flex: 2 auto
  button
    margin: 1em

  nav
    display: flex
    height: 4em
    padding: 1em
    align-items: center
    border-top: 1px solid $.br.a
    justify-content: space-between