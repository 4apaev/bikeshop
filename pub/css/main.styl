@require 'theme'
@require 'reset'

body
  font            : $.font.size.a/$.font.size.b $.font.family
  color           : $.fg.b
  background-color: $.bg.b
  line-height     : 1

ws-router
  display: block
  height: 100%

@require 'buttons'

hr
  display   : block
  margin    : 1em 0
  border    : none
  height    : 1px
  background: transparent
  box-shadow: 0 -1px 0 $.shd.c, 0 1px 0 $.shd.a


dialog
  width         : 32rem
  margin        : 20vh auto
  border        : 1px solid $.br.a
  background    : $.bg.b
  border-radius : $.radius.a
  box-shadow    : 0 2px 1em $.shd.c
  .close
    top: 0
    right: 0
    padding: 0
    width: 2em
    height: 2em
    line-height: 2
    border: none
    background: transparent
    text-align: center
    position: absolute
    &:hover
      color: $.err.b
      box-shadow: inset 0 0 0 2px $.err.b

pre
  margin: 1em
  padding: 1em
  border: $.br.a
  border-radius: $.radius.b
  background-color: $.bg.b
  color: $.fg.b
  transition: all .3s
  &:focus
    outline: none
    background-color: $.bg.c


.grid-box
  display: grid;
  grid-template: "top top" 4rem "side page" 1fr / 10rem 1fr;

  .grid.head
    grid-area: top
    box-shadow: 0 1px 0 $.br.a
    display: flex
    flex-direction: row
    justify-content: space-between
    align-items: center
    padding: 0 1rem
    a.logo
      font-size: 4em

  .grid.side
    grid-area: side
    box-shadow: 1px 0 0 $.br.a
    a
      display: flex
      padding: 0 1em
      align-items: center
      justify-content: space-between
      line-height: 3
      &:hover
        background-color: $.br.a

  .grid.page
    grid-area: page
    overflow-y: auto
    padding: 1rem


