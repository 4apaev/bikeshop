{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "ES6",
    "target": "esnext",
    "outDir": "./types",
    "pretty": true,
    "allowJs": true,
    "removeComments": true,
    "emitDeclarationOnly": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": false,
    "declaration": true,
  },
  "include": [
    "index.js",
    "db/**/*",
    "util/**/*",
    "config/**/*",
    "wheels/**/*",
    "service/**/*",
  ],
  "exclude": [
    "_/**/*",
    "pub/**/*",
    "types/**/*",
  ],
}